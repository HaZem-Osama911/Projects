@model MyApp.ViewModels.User.UserRolesVieweModel

@{
    ViewData["Title"] = "Manage Roles for " + Model.UserName;
}

<h2>Manage Roles for @Model.UserName</h2>

<form asp-action="UpdateRoles" method="post">
    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="form-group">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox"
                       name="SelectedRoles" value="@role.RoleName"
                       @(role.IsSelected ? "checked" : "") />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Save Roles</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
