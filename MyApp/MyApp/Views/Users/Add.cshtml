@model MyApp.ViewModels.User.ADDUserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<h2>Add New User</h2>

<form asp-action="ADD" method="post">
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Username</label>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
    </div>

    <h4>Assign Roles</h4>
    <div class="form-group">
        @foreach (var role in Model.Roles)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="@role.IsSelected" />
                <label class="form-check-label">@role.RoleName</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success mt-2">Add User</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>
