@model string

@if (!String.IsNullOrEmpty(Model))
{
    var isError = Model.StartsWith("Error");
    var statusClass = isError ? "danger" : "success";

    <div class="alert alert-@statusClass alert-dismissible fade show border-0 shadow-lg animate-fadeIn" role="alert"
         style="background: rgba(@(isError ? "220, 53, 69" : "25, 135, 84"), 0.15); color: #fff; border-radius: 15px; backdrop-filter: blur(8px);">
        <div class="d-flex align-items-center">
            <i class="bi @(isError ? "bi-exclamation-octagon" : "bi-check-all") fs-4 me-3"></i>
            <div>@Model</div>
        </div>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}