@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Recovery Codes";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="animate-fadeIn">
    <div class="alert alert-success border-0 shadow-sm mb-4" style="background: rgba(25, 135, 84, 0.1); border-radius: 15px;">
        <div class="d-flex align-items-center">
            <i class="bi bi-safe2-fill fs-3 me-3 text-success"></i>
            <p class="mb-0 text-white-50 small"><strong>تم توليد الأكواد بنجاح!</strong> قم بحفظها في مكان آمن فوراً.</p>
        </div>
    </div>

    <div class="p-4 text-center mb-4" style="background: rgba(0,0,0,0.2); border: 1px dashed rgba(255,255,255,0.1); border-radius: 20px;">
        <div class="row g-3">
            @for (var row = 0; row < Model.RecoveryCodes.Length; row += 2)
            {
                <div class="col-6">
                    <kbd class="d-block py-2 fs-5 bg-dark text-info border border-secondary" style="letter-spacing: 1px;">@Model.RecoveryCodes[row]</kbd>
                </div>
                <div class="col-6">
                    <kbd class="d-block py-2 fs-5 bg-dark text-info border border-secondary" style="letter-spacing: 1px;">@Model.RecoveryCodes[row + 1]</kbd>
                </div>
            }
        </div>
    </div>

    <button onclick="window.print()" class="btn btn-outline-light rounded-pill px-4">
        <i class="bi bi-printer me-2"></i> Print Codes
    </button>
</div>