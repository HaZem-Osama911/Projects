@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row animate-fadeIn">
    <div class="col-md-8 col-lg-6">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3" role="alert"></div>

            <div class="auth-input-group mb-3">
                <label asp-for="Input.OldPassword" class="form-label text-white-50 small">Current Password</label>
                <input asp-for="Input.OldPassword" class="auth-control w-100" autocomplete="current-password" placeholder="••••••••" />
                <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
            </div>

            <div class="auth-input-group mb-3">
                <label asp-for="Input.NewPassword" class="form-label text-white-50 small">New Password</label>
                <input asp-for="Input.NewPassword" class="auth-control w-100" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="auth-input-group mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label text-white-50 small">Confirm New Password</label>
                <input asp-for="Input.ConfirmPassword" class="auth-control w-100" autocomplete="new-password" placeholder="••••••••" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-auth w-100">
                <i class="bi bi-shield-check me-2"></i> Update Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}