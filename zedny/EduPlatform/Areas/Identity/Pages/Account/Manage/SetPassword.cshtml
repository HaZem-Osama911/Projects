@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Set Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row animate-fadeIn">
    <div class="col-md-8 col-lg-6">
        <div class="alert alert-info border-0 mb-4" style="background: rgba(13, 202, 240, 0.1); border-radius: 15px;">
            <p class="mb-0 text-info small">
                <i class="bi bi-info-circle-fill me-2"></i>
                أنت تستخدم تسجيل دخول خارجي. يمكنك تعيين كلمة مرور محلية لتتمكن من الدخول مباشرة عبر بريدك الإلكتروني.
            </p>
        </div>

        <form id="set-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="auth-input-group mb-3">
                <label asp-for="Input.NewPassword" class="form-label text-white-50 small">New Password</label>
                <input asp-for="Input.NewPassword" class="auth-control w-100" placeholder="••••••••" />
                <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
            </div>

            <div class="auth-input-group mb-4">
                <label asp-for="Input.ConfirmPassword" class="form-label text-white-50 small">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" class="auth-control w-100" placeholder="••••••••" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn-auth w-100">
                <i class="bi bi-plus-lg me-2"></i> Set Account Password
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}