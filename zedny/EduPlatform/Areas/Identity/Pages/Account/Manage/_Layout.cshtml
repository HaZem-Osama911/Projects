@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-black text-white" style="letter-spacing: 1px;">Account <span style="color: #6366f1;">Settings</span></h1>
        <p class="text-muted">إدارة بياناتك الشخصية وأمان حسابك</p>
    </div>

    <div class="row g-4">
        <div class="col-md-3">
            <div class="p-3" style="background: rgba(15, 23, 42, 0.4); border: 1px solid rgba(255,255,255,0.05); border-radius: 20px; backdrop-filter: blur(10px);">
                <partial name="_ManageNav" />
            </div>
        </div>
        <div class="col-md-9">
            <div class="p-4 h-100" style="background: rgba(15, 23, 42, 0.6); border: 1px solid rgba(255,255,255,0.05); border-radius: 20px; backdrop-filter: blur(10px);">
                <h2 class="h4 text-white mb-4">@ViewData["Title"]</h2>
                <hr class="opacity-10 mb-4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}