@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery Code";
}
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-body">
    <div class="led-box">
        <div class="auth-card">
            <div class="brand-name-wrapper">
                <i class="bi bi-shield-lock-fill text-warning" style="font-size: 2.5rem; filter: drop-shadow(0 0 10px rgba(245, 158, 11, 0.4));"></i>
                <h1 class="brand-title mt-2" style="font-size: 1.6rem;">Recovery</h1>
                <div class="brand-subtitle">رمز الاستعادة</div>
            </div>

            <p class="auth-subtitle-text text-start mb-4" style="font-size: 0.8rem;">
                لقد طلبت تسجيل الدخول باستخدام رمز الاستعادة. لن يتم تذكر هذا الدخول حتى يتم إدخال كود التطبيق أو تعطيل 2FA.
            </p>

            <form method="post" class="w-100">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-start"></div>

                <div class="auth-input-group">
                    <label asp-for="Input.RecoveryCode">Recovery Code</label>
                    <input asp-for="Input.RecoveryCode" class="auth-control w-100" autocomplete="off" placeholder="XXXXX-XXXXX" />
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn-auth">Log In</button>
            </form>

            <div class="auth-footer-links">
                <a asp-page="./Login" class="auth-link">إلغاء والعودة</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}