@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-body">
    <div class="led-box">
        <div class="auth-card">
            <div class="brand-name-wrapper">
                <i class="bi bi-key-fill text-primary" style="font-size: 2.5rem; filter: drop-shadow(0 0 10px rgba(99, 102, 241, 0.4));"></i>
                <h1 class="brand-title mt-2" style="font-size: 1.8rem;">Reset</h1>
                <div class="brand-subtitle">استعادة كلمة المرور</div>
            </div>

            <form method="post" class="w-100">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-start"></div>
                <div class="auth-input-group">
                    <label asp-for="Input.Email">Email Address</label>
                    <input asp-for="Input.Email" class="auth-control w-100" placeholder="name@example.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <button type="submit" class="btn-auth">Send Reset Link</button>
            </form>
        </div>
    </div>
</div>