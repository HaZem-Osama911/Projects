@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "2FA Verification";
}
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-body">
    <div class="led-box">
        <div class="auth-card">
            <div class="brand-name-wrapper">
                <i class="bi bi-shield-check text-info" style="font-size: 2.5rem;"></i>
                <h1 class="brand-title mt-2" style="font-size: 1.8rem;">Two-Factor</h1>
                <div class="brand-subtitle">تحقق الأمان</div>
            </div>

            <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="w-100 text-start">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <div class="auth-input-group">
                    <label asp-for="Input.TwoFactorCode">Authenticator Code</label>
                    <input asp-for="Input.TwoFactorCode" class="auth-control w-100" autocomplete="off" />
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger small"></span>
                </div>
                <div class="d-flex align-items-center gap-2 mb-4">
                    <input asp-for="Input.RememberMachine" class="form-check-input" />
                    <label asp-for="Input.RememberMachine" class="small text-white-50 mb-0">Remember this machine</label>
                </div>
                <button type="submit" class="btn-auth">Verify Code</button>
            </form>
            <div class="auth-footer-links">
                Lost access? <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" class="auth-link">Use recovery code</a>
            </div>
        </div>
    </div>
</div>