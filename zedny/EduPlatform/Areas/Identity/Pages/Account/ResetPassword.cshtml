@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-body">
    <div class="led-box">
        <div class="auth-card">
            <div class="brand-name-wrapper">
                <h1 class="brand-title">New Password</h1>
                <div class="brand-subtitle">تعيين كلمة مرور جديدة</div>
            </div>

            <form method="post" class="w-100">
                <input asp-for="Input.Code" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-start"></div>

                <div class="auth-input-group">
                    <label asp-for="Input.Email">Email</label>
                    <input asp-for="Input.Email" class="auth-control w-100" readonly />
                </div>
                <div class="auth-input-group">
                    <label asp-for="Input.Password">New Password</label>
                    <input asp-for="Input.Password" class="auth-control w-100" />
                </div>
                <div class="auth-input-group">
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <input asp-for="Input.ConfirmPassword" class="auth-control w-100" />
                </div>
                <button type="submit" class="btn-auth">Reset Password</button>
            </form>
        </div>
    </div>
</div>