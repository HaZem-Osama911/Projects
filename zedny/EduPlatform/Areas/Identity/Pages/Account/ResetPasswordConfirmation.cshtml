@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Success";
}
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-body">
    <div class="led-box">
        <div class="auth-card">
            <div class="brand-name-wrapper">
                <i class="bi bi-patch-check-fill text-success" style="font-size: 3rem;"></i>
                <h1 class="brand-title mt-3" style="font-size: 1.8rem;">All Set!</h1>
                <div class="brand-subtitle text-success">تم التغيير بنجاح</div>
            </div>
            <p class="auth-subtitle-text">تمت إعادة تعيين كلمة المرور الخاصة بك بنجاح.</p>
            <a asp-page="./Login" class="btn-auth d-inline-block text-decoration-none">Login Now</a>
        </div>
    </div>
</div>