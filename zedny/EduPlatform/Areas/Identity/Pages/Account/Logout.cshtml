@page
@model LogoutModel
@{
    ViewData["Title"] = "Signed Out";
}

<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-body text-center">
    <div class="auth-card">
        <div class="mb-4">
            <i class="bi bi-box-arrow-right text-danger" style="font-size: 4rem;"></i>
        </div>
        <h1 class="auth-title">Logged Out</h1>
        <p class="text-muted mb-4">You have successfully signed out. We hope to see you again soon!</p>

        <div class="d-grid gap-2">
            <a href="/" class="btn btn-auth">Go to Homepage</a>
            <a asp-page="./Login" class="auth-link mt-3">Sign in again</a>
        </div>
    </div>
</div>