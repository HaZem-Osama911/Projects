@model EduPlatform.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-danger rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4">
                    <h4 class="mb-0">🗑️ Delete Course</h4>
                </div>

                <div class="card-body p-4">

                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">⚠️ Warning!</h5>
                        <p class="mb-0">Are you sure you want to delete this course? This action cannot be undone.</p>
                    </div>

                    <div class="mb-3">
                        <h5 class="text-muted">Course Details:</h5>
                        <hr />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Course Name:</label>
                        <p class="fs-5">@Model.Name</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Description:</label>
                        <p class="text-muted">@Model.Description</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Price:</label>
                        <p class="text-success fw-bold fs-5">$@Model.Price</p>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold text-muted">Created At:</label>
                        <p class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy - hh:mm tt")</p>
                    </div>

                    <hr />

                    <form asp-action="Delete_Course" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Course_Dashboard"
                               class="btn btn-outline-secondary px-4">
                                ← Cancel
                            </a>

                            <button type="submit"
                                    class="btn btn-danger px-4 fw-semibold">
                                🗑️ Delete Course
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>