@model EduPlatform.ViewModels.EditCourseViewModel

@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-4">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">✏️ Edit Course</h4>
                </div>

                <div class="card-body p-4">

                    <form asp-action="Edit_Course" method="post">

                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly"
                             class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter course name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" rows="4" class="form-control" placeholder="Enter course description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-semibold"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Course_Dashboard"
                               class="btn btn-outline-secondary">
                                ← Back
                            </a>

                            <button type="submit"
                                    class="btn btn-primary px-4 fw-semibold">
                                Update Course
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}