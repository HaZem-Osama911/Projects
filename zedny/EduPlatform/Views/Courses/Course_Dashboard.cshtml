@model IEnumerable<EduPlatform.Models.Course>

@{
    ViewData["Title"] = "My Courses";
    var courses = Model?.ToList() ?? new List<EduPlatform.Models.Course>();
    var totalStudents = courses.Sum(c => c.Enrollments?.Count(e => e.IsActive) ?? 0);
}

<div class="container mt-4">

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <strong>✓ Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">📚 My Courses</h2>
            <p class="text-muted mb-0">Manage and track your courses</p>
        </div>
        <a asp-action="ADD_NewCourse" class="btn btn-success px-4">
            ➕ Add New Course
        </a>
    </div>

    <!-- Statistics Cards -->
    @if (courses.Any())
    {
        <div class="row mb-4">
            <!-- Total Courses -->
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 mb-1 small">Total Courses</h6>
                                <h3 class="mb-0 fw-bold">@courses.Count</h3>
                            </div>
                            <div class="stats-icon">
                                📚
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Students -->
            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 mb-1 small">Total Students</h6>
                                <h3 class="mb-0 fw-bold">@totalStudents</h3>
                            </div>
                            <div class="stats-icon">
                                👥
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Revenue -->
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 mb-1 small">Total Revenue</h6>
                                <h3 class="mb-0 fw-bold">$@courses.Sum(c => c.Price).ToString("N2")</h3>
                            </div>
                            <div class="stats-icon">
                                💰
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Average Price -->
            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-white shadow-sm stats-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="text-white-50 mb-1 small">Average Price</h6>
                                <h3 class="mb-0 fw-bold">$@courses.Average(c => c.Price).ToString("N2")</h3>
                            </div>
                            <div class="stats-icon">
                                📊
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Courses Grid -->
        <div class="row">
            @foreach (var course in courses)
            {
                var description = course.Description ?? "";
                var displayDescription = description.Length > 120 
                    ? description.Substring(0, 120) + "..." 
                    : description;
                var studentCount = course.Enrollments?.Count(e => e.IsActive) ?? 0;

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm course-card">
                        <!-- Card Header -->
                        <div class="card-header bg-gradient text-white">
                            <h5 class="card-title mb-0 course-title" title="@course.Name">
                                @course.Name
                            </h5>
                        </div>
                        
                        <!-- Card Body -->
                        <div class="card-body d-flex flex-column">
                            <p class="card-text text-muted course-description flex-grow-1">
                                @displayDescription
                            </p>
                            
                            <!-- Course Info -->
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2 pb-2 border-bottom">
                                    <span class="text-muted small">
                                        💵 Price
                                    </span>
                                    <span class="fw-bold text-success fs-5">
                                        $@course.Price.ToString("N2")
                                    </span>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="text-muted small">
                                        👥 Students
                                    </span>
                                    <span class="badge bg-info">
                                        @studentCount Enrolled
                                    </span>
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-muted small">
                                        📅 Created
                                    </span>
                                    <span class="text-muted small">
                                        @course.CreatedAt.ToString("MMM dd, yyyy")
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Card Footer -->
                        <div class="card-footer bg-white border-top">
                            <div class="d-grid gap-2">
                                <!-- View Students Button -->
                                <a asp-action="Course_Students" asp-route-id="@course.Id"
                                   class="btn btn-info btn-sm text-white">
                                    👥 View Students (@studentCount)
                                </a>
                                
                                <!-- Edit & Delete Buttons -->
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit_Course" asp-route-id="@course.Id"
                                       class="btn btn-primary btn-sm">
                                        ✏️ Edit
                                    </a>
                                    <a asp-action="Delete_Course" asp-route-id="@course.Id"
                                       class="btn btn-danger btn-sm">
                                        🗑️ Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="text-center py-5">
            <div class="empty-state">
                <div class="empty-state-icon mb-4">
                    📚
                </div>
                <h3 class="text-muted mb-3">No courses yet!</h3>
                <p class="text-muted mb-4">Start creating courses to share your knowledge with students.</p>
                <a asp-action="ADD_NewCourse" class="btn btn-success btn-lg px-5">
                    ➕ Create Your First Course
                </a>
            </div>
        </div>
    }

</div>

<!-- Custom Styles -->
<style>
    .course-card {
        transition: all 0.3s ease;
        border: 1px solid #e0e0e0;
    }

    .course-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15) !important;
        border-color: #007bff;
    }

    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .course-title {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .course-description {
        min-height: 72px;
        font-size: 0.9rem;
        line-height: 1.6;
    }

    .stats-card {
        transition: all 0.3s ease;
        border: none;
    }

    .stats-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2) !important;
    }

    .stats-icon {
        font-size: 2.5rem;
        opacity: 0.6;
    }

    .empty-state {
        padding: 3rem 1rem;
    }

    .empty-state-icon {
        font-size: 5rem;
        opacity: 0.3;
    }

    .card-body {
        display: flex;
        flex-direction: column;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.35rem 0.65rem;
    }

    @@media (max-width: 768px) {
        .course-description {
            min-height: auto;
        }
        
        .stats-card {
            margin-bottom: 1rem;
        }
    }
</style>