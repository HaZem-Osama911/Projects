@model IEnumerable<EduPlatform.Models.ApplicationUser>
@{
    ViewData["Title"] = "My Students";
}

<div class="container py-5">
    <div class="mb-5 animate-fadeIn">
        <h2 class="h3 fw-bold">🎓 My Students</h2>
        <p class="text-muted-light">Manage and view your assigned students</p>
    </div>

    @if (!Model.Any())
    {
        <div class="glass-card animate-fadeIn text-center py-5">
            <div class="empty-icon">👥</div>
            <h3>No Students Assigned</h3>
            <p class="text-muted-light">You don't have any students in your list yet.</p>
        </div>
    }
    else
    {
        <div class="table-container animate-fadeIn" style="animation-delay: 0.1s">
            <table class="table">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Email Address</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="user-avatar-modern">
                                        @student.FirstName?.FirstOrDefault()
                                    </div>
                                    <div class="fw-bold">@student.FirstName @student.LastName</div>
                                </div>
                            </td>
                            <td class="text-muted">@student.Email</td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="EditStudent" asp-route-studentId="@student.Id"
                                       class="btn-modern btn-sm-modern btn-primary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="RemoveStudent" asp-route-studentId="@student.Id"
                                       class="btn-modern btn-sm-modern btn-danger">
                                        <i class="bi bi-x-circle"></i> Remove
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>