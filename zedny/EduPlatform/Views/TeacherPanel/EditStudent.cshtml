@model EduPlatform.Models.ApplicationUser
@{
    ViewData["Title"] = "Edit Student";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="glass-card animate-fadeIn">
                <div class="text-center mb-4">
                    <div class="user-avatar-modern user-avatar-large mx-auto">
                        @Model.FirstName?.FirstOrDefault()
                    </div>
                    <h2 class="h3">Edit Student</h2>
                    <p class="text-muted-light">Update details for @Model.FirstName @Model.LastName</p>
                </div>

                <form asp-action="Edit" method="post">
                    <input type="hidden" name="studentId" value="@Model.Id" />

                    <div class="mb-3">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" name="FirstName" value="@Model.FirstName" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" name="LastName" value="@Model.LastName" required />
                    </div>

                    <div class="mb-4">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-control" name="Email" value="@Model.Email" required />
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn-modern btn-success">
                            <i class="bi bi-check-lg"></i> Save Changes
                        </button>
                        <a asp-action="MyStudents" class="btn-modern btn-secondary text-center">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>