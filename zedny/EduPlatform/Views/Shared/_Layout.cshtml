@using EduPlatform.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zedny</title>
    <link rel="icon" type="image/png" href="/Asset/img/logo.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Cairo:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
</head>
<body class="dark-theme">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark ultra-modern-navbar">
            <div class="container-fluid px-4">
                <a class="navbar-brand brand-logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="d-flex align-items-center gap-2">
                        <div class="logo-wrapper">
                            <img src="/Asset/img/logo.png" alt="Zedny Logo" style="height: 45px; width: auto; filter: drop-shadow(0 0 8px rgba(99, 102, 241, 0.6));">
                        </div>
                        <div class="d-flex flex-column">
                            <span class="logo-text fw-bolder" style="letter-spacing: 1px; font-size: 1.5rem; background: linear-gradient(to right, #fff, #6366f1); -webkit-background-clip: text; -webkit-text-fill-color: transparent; line-height: 1.1;">ZEDNY</span>
                            <span style="font-family: 'Cairo', sans-serif; font-size: 0.7rem; color: #6366f1; letter-spacing: 1px; font-weight: 700; margin-top: 2px;">زِدْنِي عِلْمًا</span>
                        </div>
                    </div>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto ms-4">
                        <li class="nav-item">
                            <a class="nav-link nav-link-modern" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill me-2"></i>Home
                            </a>
                        </li>

                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);

                            if (currentUser != null && await UserManager.IsInRoleAsync(currentUser, "SUPER_ADMIN"))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle nav-link-modern" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-shield-lock-fill me-2"></i>Admin Panel
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-modern animate-fadeIn shadow-lg border-0">
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-area="" asp-controller="Roles" asp-action="Roles_Dashboard">
                                                <i class="bi bi-people-fill text-primary me-2"></i> Roles
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item dropdown-item-modern" asp-area="" asp-controller="Teachers" asp-action="Teacher_Dashboard">
                                                <i class="bi bi-person-badge-fill text-info me-2"></i> Teachers
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            }

                            if (currentUser != null && await UserManager.IsInRoleAsync(currentUser, "TEACHER"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link nav-link-modern" asp-area="" asp-controller="Courses" asp-action="Course_Dashboard">
                                        <i class="bi bi-book-fill me-2"></i>My Courses
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var currentUser = await UserManager.GetUserAsync(User);
                            var userInitial = currentUser?.FirstName?.Substring(0, 1).ToUpper() ?? "U";
                            var userFullName = $"{currentUser?.FirstName} {currentUser?.LastName}".Trim();

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle user-profile-modern d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                    <div class="user-avatar-modern">@userInitial</div>
                                    <div class="d-none d-sm-block text-white px-2" style="font-size: 0.9rem; font-weight: 500;">
                                        @userFullName
                                    </div>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-modern animate-fadeIn shadow-lg border-0">
                                    <li>
                                        <a class="dropdown-item dropdown-item-modern" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            <i class="bi bi-person-circle me-2"></i> Profile Settings
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider bg-secondary opacity-25"></li>
                                    <li>
                                        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
                                            <button type="submit" class="dropdown-item dropdown-item-modern text-danger fw-bold">
                                                <i class="bi bi-box-arrow-right me-2"></i> Sign Out
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="btn btn-sm btn-outline-light rounded-pill px-4" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-sm btn-primary rounded-pill px-4 shadow-sm" asp-area="Identity" asp-page="/Account/Register" style="background: #6366f1; border: none;">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content-modern">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="ultra-modern-footer border-top border-white border-opacity-10 mt-5">
        <div class="container text-center py-4">
            <div class="row align-items-center">
                <div class="col-md-4 text-md-start mb-3 mb-md-0">
                    <span class="fw-bold fs-4" style="background: linear-gradient(to right, #6366f1, #0ea5e9); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">ZEDNY</span>
                    <p class="text-muted small mb-0">زِدْنِي عِلْمًا</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#" class="btn btn-dark btn-sm rounded-circle"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="btn btn-dark btn-sm rounded-circle"><i class="bi bi-whatsapp"></i></a>
                        <a href="#" class="btn btn-dark btn-sm rounded-circle"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>
                <div class="col-md-4 text-md-end text-muted small">
                    &copy; 2026 <b>Zedny Platform</b>. All rights reserved.
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>