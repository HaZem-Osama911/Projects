@model EduPlatform.Models.ApplicationUser
@{
    ViewData["Title"] = "Delete Teacher";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="glass-card animate-fadeIn text-center" style="border-color: var(--accent-danger);">
                <div class="mb-4 text-danger">
                    <i class="bi bi-exclamation-octagon-fill" style="font-size: 4rem;"></i>
                </div>

                <h2 class="h3 mb-3">Delete Confirmation</h2>
                <p class="text-muted-light mb-4">
                    Are you sure you want to delete <strong>@Model.FirstName @Model.LastName</strong>?
                    <br />This action cannot be undone.
                </p>

                <form asp-action="Delete_Teacher" method="post">
                    <input type="hidden" asp-for="Id" name="id" />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn-modern btn-danger">
                            Yes, Delete Teacher
                        </button>
                        <a asp-action="Teacher_Dashboard" class="btn-modern btn-secondary text-center">
                            No, Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>