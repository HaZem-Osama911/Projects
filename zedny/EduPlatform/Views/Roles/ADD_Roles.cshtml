@{
    ViewData["Title"] = "Add New Role";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="glass-card animate-fadeIn">
                <div class="text-center mb-4">
                    <div class="user-avatar-modern mx-auto mb-3"
                         style="width: 60px; height: 60px; font-size: 1.5rem; background: linear-gradient(135deg, var(--accent-success), #059669);">
                        <i class="bi bi-shield-plus text-white"></i>
                    </div>
                    <h2 class="fw-bold text-white">Create Role</h2>
                    <p class="text-muted small">Define a new access level for the system</p>
                </div>

                <form asp-action="ADD_Roles" method="post">
                    <div class="mb-4">
                        <label for="roleName" class="form-label">Role Name</label>
                        <input type="text" class="form-control" id="roleName" name="roleName"
                               required placeholder="e.g. Moderator" autofocus />
                        <small class="text-muted" style="font-size: 0.75rem;">Use clear, descriptive names for roles.</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-modern btn-success">
                            <i class="bi bi-check-circle-fill"></i> Create Role
                        </button>
                        <a asp-action="Roles_Dashboard" class="btn btn-modern btn-secondary">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>